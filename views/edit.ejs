<% include ./partials/header %>
<div class = "ui main text container segment">
	<div class ="ui huge header">Edit <%= blog.title%></div>
	<form action = "/blogs/<%=blog._id%>?_method=PUT" method = "POST">
		<div class = "ui form">
			<div class = "field">
							<input type = "text" name = "blog[title]" value ="<%=blog.title%>" required>
			</div>
			<div class = "field">
				<input type = "text" name = "blog[image]" value ="<%=blog.image%>" required > 
			</div>
			<div class = "field">
				<textarea rows = "6" name = "blog[body]"  required><%=blog.body%></textarea>
			</div>
			<input class = "ui button" type = "submit">
		</div>
	</form>
</div>

<% include ./partials/footer %>